<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuessingGameActivity">

    <TextView
        android:id="@+id/guessNumberText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/guessNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toBottomOf="@id/guessNumberText"/>
    <Button
        android:id="@+id/guess"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:text="Gjett"
        android:onClick="onClickGuessNumber"
        app:layout_constraintTop_toBottomOf="@id/guessNumber"/>
    <Button
        android:id="@+id/newGame"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:text="Nytt spill"
        android:onClick="onClickNewGame"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/guess"/>


</androidx.constraintlayout.widget.ConstraintLayout>